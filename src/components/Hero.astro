---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <a href="#0">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" />

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      grid-column: full;
      display: grid;
      grid-template-columns: subgrid;

      background-color: var(--primary-color3);
      position: relative;

      &::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        grid-row: 3/ 5;
        grid-column: full;
        background: white;
        z-index: 1;
        pointer-events: none;
      }
      img {
        grid-row: 1 / 3;
        grid-column: hero;
        place-self: stretch;
        object-fit: cover;
      }

      ul {
        grid-column: content;
        grid-row: 2 / 4;
        display: flex;
        gap: 1rem;
        z-index: 2;
      }

      .hero-content {
        grid-column: content-start / hero-start;
        grid-row: 1;
        padding-block: 5rem;
      }
      h1 {
        color: var(--secondary-color2);
        font-family: var(--heading-font);
        font-size: 50px;
        font-style: normal;
        font-weight: 700;
        line-height: 58px;
        margin-bottom: var(--header-margin);
      }
      p {
        color: var(--secondary-color2);
        font-family: var(--text-font);
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 23.6px;
        gap: 10px;
        margin-bottom: var(--text-margin);
      }
      a {
        padding: 16px 31px;
        border-radius: 42px;
        border: 1px solid #ebebeb;
        background: #fff;
        color: #353535;
        font-family: var(--text-font);
        font-size: 18px;
        font-style: normal;
        font-weight: 600;
        line-height: 28.8px;
        text-decoration: none;
      }
    }
  }
</style>
