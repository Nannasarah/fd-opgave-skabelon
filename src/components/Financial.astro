---
import Section from "@layouts/Section.astro";
import { Image } from "astro:assets";
import DynamicIcon from "./helpers/DynamicIcon.astro";
import ArrowR from "@icons/arrow--right.svg";
import ArrowL from "@icons/arrow-left.svg";
import financialData from "@data/financialProjections.json";
import Text from "@components/Text.astro";
// console.log(financialData);
---

<Section background="secondary-color1">
  <div class="financial">
    <section class="intro">
      <div class="text">
        <Text title={financialData.title} desc={financialData.subtitle} />
      </div>

      <div class="arrows">
        <a class="arrow prev"><ArrowL class="icon" /></a>
        <a class="arrow next"><ArrowR class="icon" /></a>
      </div>
    </section>

    <ul role="list">
      {
        financialData.values.map((item) => (
          <li>
            <DynamicIcon name={item.icon} />
            <h2>{item.title}</h2>
            <p>{item.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</Section>

<style>
  /* === INTRO GRID === */
  .intro {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    padding-block-start: 2rem;
    gap: 2rem;
  }

  /* === PILE === */
  .arrows {
    display: flex;
    gap: 10px;
    place-self: end;
    margin-bottom: 30px;
  }

  .arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary-color3);
    color: var(--secondary-color2);
    padding: 12px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .arrow:hover {
    background: var(--primary-color1);
    color: var(--primary-color3);
  }

  .icon {
    width: 20px;
    height: 20px;
  }

  /* === LISTE === */
  ul {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    grid-column: span 1;
    padding-inline: max(1rem, 50% - var(--content-width) / 2);
    padding-block-end: 1rem;
  }

  ul li {
    flex-basis: min(400px, 90%);
    flex-shrink: 0;
    background: #ebebeb;
    color: #595566;
    border-radius: 8px;
    padding: 2.75rem 2.1875rem;
    align-self: start;
    font-family: var(--text-font);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 23.6px;
    scroll-snap-align: center;
    transition:
      color 0.3s ease,
      background 0.3s ease;

    h2 {
      color: var(--primary-color3);
      font-family: Cabin;
      font-size: 25px;
      font-style: normal;
      font-weight: 600;
      line-height: 29px;
      padding-block: var(--text-padding);
      transition: color 0.3s ease;
    }
    svg {
      color: var(--primary-color3);
    }
  }

  ul li:hover {
    background: #000;
    color: #fff;
    svg {
      color: #ffcc4a;
    }
    h2 {
      color: #fff;
    }
  }
</style>
