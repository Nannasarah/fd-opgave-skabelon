---
const { background } = Astro.props;
---

<section data-background={background}>
  <slot />
</section>

<style>
  @layer components {
    section {
      display: grid;
      grid-template-columns: subgrid;
      padding-block: 5rem;

      > * {
        grid-column: content;
      }
    }

    [data-background="primary-color1"] {
      background: var(--primary-color1);
    }
    [data-background="secondary-color1"] {
      background: var(--secondary-color1);
    }
    [data-background="primary-color3"] {
      background: var(--primary-color3);
    }
  }
</style>
